#
#
#
# L ######PAGE LAYOUT & PROGRAM OPTIONS######
#
page_size=a4
page_orientation=Landscape
page_number=1
blocks_x_page=10
nucleotides_x_line=50000
zoom=*..*
#
header_style=none
#
# major_tickmarks_num=10
# minor_tickmarks_num=10
major_tickmarks_nucleotides=5000
minor_tickmarks_nucleotides=1000
#
#left_source_label_width=2.5cm
show_left_source_label=false
show_blocks_top-bottom=on
#
group_label_scale=2
sort_tracks_by_sequence=off
strand_show_independent=off
show_outer_scale=bottom
show_inner_scale=none
default_scale_spacing_width=0
default_scale_width=0.7cm
default_track_width=2cm
show_grid=off
nucleotide_scale=kb
#
#
# F ############GENOMIC FEATURES############
#
*::fill_shape_mode=1_color
*::shape=arrow_head
NORMAL::feature_color=grey
PUTAL::feature_color=red
OUTPUTAL::feature_color=darkred
PHX::feature_color=blue
OUTNORMAL::feature_color=darkgrey
INCON::feature_color=verylightred


#
# G ############GROUP FEATURES##############
#
*::group_line=none
#*::group_shape=thick_line
#
# S ############SOURCE FEATURES#############
